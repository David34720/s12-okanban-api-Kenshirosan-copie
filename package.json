{
  "name": "s12-okanban-api-kenshirosan",
  "version": "1.0.0",
  "description": "[Rappel : lien pour cr√©er des issues](https://github.com/O-clock-Quindim/Soutien-ateliers/issues)",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "db:create:sequelize": "node src/database/migrations.js",
    "db:create:sql": "psql -U okanban < data/create_tables.sql",
    "db:seed": "psql -U okanban < data/seed_tables.sql",
    "db:reset": "npm run db:create:sql && npm run db:seed"
  },
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "joi": "^17.13.3",
    "pg": "^8.12.0",
    "sanitize-html": "^2.13.0",
    "sequelize": "^6.37.3"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "overrides": [
      {
        "files": "*.js",
        "options": {
          "parser": "babel"
        }
      },
      {
        "files": "*.json",
        "options": {
          "parser": "json",
          "tabWidth": 2
        }
      }
    ],
    "semi": true,
    "requirePragma": false,
    "proseWrap": "preserve",
    "arrowParens": "avoid",
    "htmlWhitespaceSensitivity": "css",
    "quoteProps": "as-needed"
  }
}
